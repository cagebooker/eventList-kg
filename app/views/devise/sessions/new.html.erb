<div class="container box devise-field">
  <h2 class="title is-5">登入：事件記錄簿</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, '信箱', class:'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'input is-small' %>
    </div>

    <div class="field">
      <%= f.label :password, '密碼', class:'label' %>
      <%= f.password_field :password, autocomplete: "current-password", class:'input is-small' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "登入", class:'button is-small is-fullwidth btn' %>
    </div>
  <% end %>
  <div class="flex is-justify-content-space-between">
    <%= render "devise/shared/links" %>
  </div>
</div>

