<div class="container box devise-field">
  <h2 class="title is-5">註冊：事件記錄簿</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, '信箱', class:'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input is-small" %>
    </div>

    <div class="field">
      <%= f.label :password, '密碼（至少需要6個字）', class:'label'  %>
      <%= f.password_field :password, autocomplete: "new-password", class:"input is-small" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, '確認密碼', class:'label'  %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input is-small" %>
    </div>
    <div class="actions mt-4">
      <%= f.submit "註冊", class:'button is-small btn is-fullwidth is-primary' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>



