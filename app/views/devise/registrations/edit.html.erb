<div class="columns mt-4">
  <div class="column is-8 is-offset-2">


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="columns is-multiline">
        <div class="column is-4 is-offset-1">
          <h2 class="title is-5 ">編輯個人資料</h2>
          <div class="field">
            <%= f.label :username, '使用者名稱', class:'label' %>
            <%= f.text_field :username, autofocus: true, class:'input is-small' %>
          </div>
          <div class="field">
            <%= f.label :email, '註冊信箱', class:'label' %>
            <%= f.email_field :email, readonly: true,autocomplete: "email", class:'input is-small'  %>
          </div>
        </div>
        <div class="column is-4 is-offset-1">
          <div class="title is-6 has-text-weight-semibold">修改密碼(如果不想修改可以留空)</div>
          <div class="field">
            <%= f.label :password, '新密碼', class:'label' %>
            <%= f.password_field :password, autocomplete: "new-password", class:'input is-small'  %>
          </div>
          <div class="field">
            <%= f.label :password_confirmatio, '密碼確認', class:'label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input is-small'  %>
          </div>

        </div>

      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="columns">
        <div class="column is-9 is-offset-1">

          <div class="actions">
            <%= f.submit "Update", class:'button is-small is-pulled-right'  %>
          </div>
        </div>
      </div>

    <% end %>

      <div class="columns">
        <div class="column is-9 is-offset-1">
          <%= link_to "Back", :back ,class:'btn-hover-white is-pulled-right'%>
        </div>
      </div>


  </div>
</div>

